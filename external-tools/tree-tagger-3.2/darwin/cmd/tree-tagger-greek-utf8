MWL=${CMD}/mwl-lookup-greek-utf8.perl
TAGGER=${BIN}/tree-tagger
PARFILE=${LIB}/greek-utf8.par

$TOKENIZER $* |
# recognition of MWLs
$MWL |
# tagging
$TAGGER $OPTIONS $PARFILE
